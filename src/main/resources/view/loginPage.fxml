<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #E4C087;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.LoginController">

    <!-- Username Field -->
    <Label layoutX="120.0" layoutY="138.0" text="Username :">
      <font>
         <Font name="System Bold" size="18.0" />
      </font></Label>
    <TextField fx:id="txtUsername" layoutX="240.0" layoutY="133.0" prefHeight="34.0" prefWidth="238.0" promptText="Enter Username or User ID" />

    <!-- Password Field -->
    <Label layoutX="120.0" layoutY="198.0" text="Password :">
      <font>
         <Font name="System Bold" size="18.0" />
      </font></Label>
    <PasswordField fx:id="txtPassword" layoutX="240.0" layoutY="193.0" prefHeight="34.0" prefWidth="238.0" promptText="Enter Password" />

    <!-- Login Button -->
    <Button fx:id="btnLogin" layoutX="181.0" layoutY="294.0" onAction="#handleLoginAction" prefHeight="42.0" prefWidth="238.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-color: black;" text="Login">
      <font>
         <Font name="System Bold" size="22.0" />
      </font></Button>
   <Label layoutX="224.0" layoutY="36.0" prefHeight="50.0" prefWidth="152.0" text="- Login - ">
      <font>
         <Font name="System Bold" size="34.0" />
      </font>
   </Label>

</AnchorPane>
